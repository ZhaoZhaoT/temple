<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:bl_corners_radius="8dp"
    app:bl_solid_color="@color/white"
    android:paddingHorizontal="15dp"
    android:paddingVertical="18dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_order_state"
        android:layout_alignParentRight="true"
        android:textSize="14sp"
        tools:text="待付款"
        android:textColor="#EF562E"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_idno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/tv_order_state"
        android:text="轩辕仙境"
        android:textSize="14sp"
        android:textColor="#333333"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="25dp"
        />




    <ImageView
        android:scaleType="centerCrop"
        android:layout_below="@+id/tv_idno"
        android:id="@+id/iv_picture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        />


    <TextView
        android:id="@+id/tv_price"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_picture"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="¥429"
        android:textColor="#333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_choose_number"
        android:layout_below="@+id/tv_price"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        tools:text="X1"
        android:textColor="#CCCCCC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_size"
        android:layout_below="@+id/tv_choose_number"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:textSize="11sp"
        tools:text="属性:默认"
        android:textColor="@color/text_gray4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        tools:text="日式芝士蛋糕日式芝士蛋糕日式芝士蛋糕日式芝士蛋糕日式芝士蛋糕日式芝士蛋糕"
        android:id="@+id/tv_product_tile"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/iv_picture"
        android:layout_toLeftOf="@+id/tv_order_state"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/iv_picture"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_zoom"
        android:layout_width="35dp"
        android:layout_height="15dp"
        android:text="特供区"
        android:textSize="10sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/zoom_bg"
        android:layout_toRightOf="@+id/iv_picture"
        android:layout_alignBottom="@+id/iv_picture"
        android:layout_marginLeft="10dp"
        ></TextView>

    <TextView
        android:id="@+id/all_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#EF562E"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/iv_picture"
        android:layout_alignParentRight="true"
        android:layout_marginTop="12dp"
        ></TextView>
    <TextView
        android:id="@+id/tv_shoop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#42485A"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_below="@+id/iv_picture"
        android:layout_toLeftOf="@+id/all_money"
        android:layout_marginTop="12dp"
        ></TextView>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/ll_btn"
        android:layout_below="@+id/all_money"
        android:gravity="right"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_btn1"
            android:gravity="center"
            app:bl_corners_radius="16dp"
            app:bl_stroke_color="#CCCCCC"
            app:bl_stroke_width="1dp"
            android:textSize="13sp"
            android:text="取消订单"
            android:layout_marginRight="10dp"
            android:textColor="#333333"
            android:layout_width="75dp"
            android:layout_height="32dp"/>

        <TextView
            android:id="@+id/tv_btn2"
            android:gravity="center"
            app:bl_corners_radius="16dp"
            app:bl_stroke_color="#C89667"
            app:bl_stroke_width="1dp"
            android:textSize="13sp"
            android:text="去支付"
            android:textColor="#C89667"
            android:layout_width="75dp"
            android:layout_height="32dp"/>
    </LinearLayout>




</RelativeLayout>