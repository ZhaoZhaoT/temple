<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:background="@mipmap/login_bg"
    tools:context=".activity.login.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp">
        <TextView
            android:id="@+id/tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:text="登录"
            android:textColor="@color/text_main2"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tv_regiest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:textColor="@color/text_gray6"
            android:textSize="20sp"
            />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="359dp"
        android:background="@mipmap/login_center_bg"
        android:layout_marginTop="97dp"
        android:layout_marginHorizontal="14dp"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:visibility="visible">
        <ImageView
            android:layout_width="148dp"
            android:layout_height="54dp"
            android:src="@mipmap/login_logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="29dp"
            />
        <EditText
            android:id="@+id/login_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@null"
            android:hint="请输入帐号"
            android:textSize="14sp"
            android:layout_marginVertical="@dimen/dp_10"
            android:textColor="#9B6A52"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F0DECA"
            />
        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@null"
            android:inputType="textPassword"
            android:maxLength="18"
            android:hint="请输入密码"
            android:textSize="14sp"
            android:textColor="#9B6A52"
            android:layout_marginVertical="@dimen/dp_10"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F0DECA"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
<!--            <ImageView-->
<!--                android:id="@+id/remember_password"-->
<!--                android:layout_width="11dp"-->
<!--                android:layout_height="11dp"-->
<!--                android:src="@mipmap/password_unselect"-->
<!--                android:layout_centerVertical="true"-->
<!--                ></ImageView>-->
<!--            <TextView-->
<!--                android:id="@+id/"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_toRightOf="@+id/remember_password"-->
<!--                android:layout_marginLeft="5dp"-->
<!--                android:text="记住密码"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:textColor="#9B6A52"-->
<!--                android:textSize="12sp"-->
<!--                ></TextView>-->

            <TextView
                android:id="@+id/forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="忘记密码？"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#9B6A52"
                android:textSize="13sp"
                />

        </RelativeLayout>

        <ImageView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@mipmap/login_button"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:layout_marginTop="25dp"
            />
        <LinearLayout
            android:paddingTop="15dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:button="@drawable/selector_login"
                android:layout_marginRight="3dp"
                android:layout_marginTop="1dp"
                android:id="@+id/ck_agree"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <TextView
                android:textSize="11sp"
                android:text="登录即同意"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="11sp"
                android:id="@+id/tv_user_protrol"
                android:text="《用户协议》"
                android:textColor="#76341A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="11sp"
                android:text="和"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="11sp"
                android:id="@+id/tv_user_sercert"
                android:text="《隐私政策》"
                android:textColor="#76341A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_regiest"
        android:layout_width="match_parent"
        android:layout_height="447dp"
        android:background="@mipmap/login_center_bg"
        android:layout_marginTop="97dp"
        android:layout_marginHorizontal="14dp"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="148dp"
            android:layout_height="54dp"
            android:src="@mipmap/login_logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="29dp"
            />
        <EditText
            android:id="@+id/regiest_account"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@null"
            android:hint="请输入帐号"
            android:textSize="14sp"
            android:layout_marginVertical="@dimen/dp_10"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F0DECA"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/regiest_code"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:textSize="14sp"
                android:layout_marginVertical="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/get_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/remember_password"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:text="获取验证码"
                android:textColor="#9B6A52"
                android:textSize="12sp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F0DECA"
            />
        <EditText
            android:id="@+id/regiest_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@null"
            android:inputType="textPassword"
            android:maxLength="18"
            android:hint="请输入密码"
            android:textSize="14sp"
            android:layout_marginVertical="@dimen/dp_10"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F0DECA"
            />
        <EditText
            android:id="@+id/regiest_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@null"
            android:inputType="textPassword"
            android:maxLength="18"
            android:hint="确认密码"
            android:textSize="14sp"
            android:layout_marginVertical="@dimen/dp_10"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F0DECA"
            />

        <ImageView
            android:id="@+id/regiest"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@mipmap/regiest_button"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:layout_marginTop="25dp"
            />
        <LinearLayout
            android:paddingTop="15dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:button="@drawable/selector_login"
                android:layout_marginRight="3dp"
                android:layout_marginTop="1dp"
                android:id="@+id/ck_agree1"
                android:layout_width="15dp"
                android:layout_height="15dp"/>
            <TextView
                android:textSize="11sp"
                android:text="注册即同意"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="11sp"
                android:id="@+id/tv_user_protrol1"
                android:text="《用户协议》"
                android:textColor="#76341A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="11sp"
                android:text="和"
                android:textColor="#666666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="11sp"
                android:id="@+id/tv_user_sercert1"
                android:text="《隐私政策》"
                android:textColor="#76341A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>