<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:bl_corners_radius="5dp"
    app:bl_solid_color="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_product"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="167dp"/>
    <TextView
        android:id="@+id/tv_product_tile"
        android:text="金貂绒外套女中长款衣香丽影冬装新款 "
        android:layout_below="@+id/iv_product"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_new_price"
        android:textSize="17sp"
        android:layout_below="@+id/tv_product_tile"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="7dp"
        android:text="¥429"
        android:layout_marginRight="5dp"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_old_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_new_price"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="-1dp"
        android:layout_toRightOf="@+id/tv_new_price"
        android:text="¥429"
        android:textColor="@color/text_gray"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_sale_count"
        android:layout_alignBottom="@+id/tv_new_price"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:textSize="11sp"
        android:text="已售"
        android:gravity="center"
        android:textColor="@color/text_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>