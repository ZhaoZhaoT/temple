<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/temple_background_gradient_bg"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@mipmap/haode_top"></ImageView>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <RelativeLayout
            android:id="@+id/iv_left"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="9dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_arrow" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_base_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="好德"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_chaojing"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/haode_center"
            android:gravity="center"
            android:text="抄经"
            android:textColor="#6D1B13"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_songjing"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:layout_below="@+id/ll_chaojing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/haode_center"
            android:gravity="center"
            android:text="诵经"
            android:textColor="#6D1B13"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_zhuangzhong"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:layout_below="@+id/ll_songjing"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/haode_center"
            android:gravity="center"
            android:text="晨钟"
            android:textColor="#6D1B13"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_chouqian"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:layout_below="@+id/ll_zhuangzhong"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/haode_center"
            android:gravity="center"
            android:text="抽签"
            android:textColor="#6D1B13"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mugu"
        android:layout_width="210dp"
        android:layout_height="55dp"
        android:layout_below="@+id/ll_chouqian"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/haode_center"
            android:gravity="center"
            android:text="暮鼓"
            android:textColor="#6D1B13"
            android:textSize="16sp"></TextView>
    </LinearLayout>

    <ImageView
        android:layout_width="129dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"
        android:src="@mipmap/haode_botton"></ImageView>

</RelativeLayout>