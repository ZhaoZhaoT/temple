<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1EBD8"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/home_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:clickable="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="68dp"
            android:src="@mipmap/default_head"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:id="@+id/tv_user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18153269846"
                android:textColor="#222222"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_level"
                android:layout_width="32dp"
                android:layout_height="15dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/yk_bg"
                android:gravity="center"
                android:text="游客"
                android:textColor="#ffffff"
                android:textSize="11sp"
                android:visibility="gone"
                tools:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="用户455645"
            android:textColor="#666666"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="23dp"
            android:background="#EFEFEF" />

        <RelativeLayout
            android:id="@+id/rl_wdxz"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/iv_wdxz"
                android:layout_width="17dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:src="@mipmap/wdxz" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/iv_wdxz"
                android:text="我的道友"
                android:textColor="#222222"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="12.5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:src="@mipmap/iv_right" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_yqhy"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/iv_yqhy"
                android:layout_width="17dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:src="@mipmap/yqhy" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/iv_yqhy"
                android:text="一起修行"
                android:textColor="#222222"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="12.5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:src="@mipmap/iv_right" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_mx"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/iv_mx"
                android:layout_width="19dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:src="@mipmap/mx" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/iv_mx"
                android:text="无量功德"
                android:textColor="#222222"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="12.5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:src="@mipmap/iv_right" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_aboutus"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/iv_aboutus"
                android:layout_width="17dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:src="@mipmap/aboutus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/iv_aboutus"
                android:text="关于我们"
                android:textColor="#222222"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="12.5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:src="@mipmap/iv_right" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_setting"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="17dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:src="@mipmap/setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@+id/iv_setting"
                android:text="偏好设置"
                android:textColor="#222222"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="7dp"
                android:layout_height="12.5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="30dp"
                android:src="@mipmap/iv_right"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="25dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/deep_logout"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="#222222"
                android:textSize="14dp" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>