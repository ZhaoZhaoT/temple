<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:background="@mipmap/login_bg"
    tools:context=".activity.login.LoginActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp">
        <ImageView
            android:id="@+id/tv_back"
            android:layout_width="10dp"
            android:layout_height="18dp"
            android:src="@mipmap/back_arrow"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_regiest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:layout_centerInParent="true"
            android:layout_marginRight="100dp"
            android:textStyle="bold"
            android:textColor="@color/text_main2"
            android:textSize="20sp"
            />

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="414dp"
        android:background="@mipmap/login_center_bg"
        android:layout_marginTop="97dp"
        android:layout_marginHorizontal="14dp"
        android:orientation="vertical"
        android:paddingHorizontal="30dp">
        <ImageView
            android:layout_width="148dp"
            android:layout_height="54dp"
            android:src="@mipmap/login_logo"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="29dp"
            />
        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@null"
            android:hint="请输入帐号"
            android:textSize="14sp"
            android:layout_marginVertical="@dimen/dp_10"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F0DECA"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_40"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:textSize="14sp"
                android:layout_marginVertical="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/tv_send_sms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/remember_password"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:text="获取验证码"
                android:textColor="#9B6A52"
                android:textSize="12sp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F0DECA"
            />
        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="请输入密码"
            android:textSize="14sp"
            android:layout_marginVertical="@dimen/dp_10"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F0DECA"
            />
        <EditText
            android:id="@+id/et_confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@null"
            android:inputType="textPassword"
            android:hint="请确认密码"
            android:textSize="14sp"
            android:layout_marginVertical="@dimen/dp_10"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#F0DECA"
            />

        <ImageView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@mipmap/submit_button"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:layout_marginTop="25dp"
            />
    </LinearLayout>
</LinearLayout>