<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFDF6"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFDF6"
        android:padding="@dimen/dp_10"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/chenzhong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/chenzhong"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/iv_zhuangzhong1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/zhuangzhong1"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/iv_zhuangzhong2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/chengzhong2"
                android:scaleType="centerCrop"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="0"
                android:textColor="#6D1B13"
                android:textSize="24sp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_alignBottom="@+id/chenzhong"
                android:layout_marginBottom="20dp"
                app:bl_corners_radius="40dp"
                app:bl_solid_color="#D4C4AA"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="撞钟三响，分别代表福、禄、寿。这里的福指的就是福喜临门，禄指的就是高官厚禄，寿指的就是延年益寿"
            android:layout_marginTop="10dp"
            android:textColor="#D12E05"
            />

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="累计撞钟7次"-->
<!--            android:layout_marginTop="30dp"-->
<!--            android:textColor="#886860"-->
<!--            />-->

    </LinearLayout>







</LinearLayout>
