<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/invite_bg"
    tools:context=".activity.login.LoginActivity">

    <ImageView
        android:id="@+id/iv_invite_top"
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:src="@mipmap/invite_topbg"
        android:scaleType="fitXY"
       />

    <ImageView
        android:id="@+id/iv_invite_friend"
        android:layout_width="191dp"
        android:layout_height="45dp"
        android:layout_marginTop="92dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/invite_friend"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:id="@+id/save_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:bl_corners_radius="6dp"
        app:bl_solid_color="@color/white"
        android:layout_below="@+id/iv_invite_friend"
        android:layout_marginTop="22dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="28dp"
            />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户E2030033003003"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginTop="7dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E8E8E8"
            android:layout_marginTop="17dp"
            />

        <ImageView
            android:id="@+id/iv_qr_code"
            android:layout_centerVertical="true"
            android:layout_marginTop="24dp"
            android:scaleType="fitXY"
            android:layout_width="202dp"
            android:layout_height="202dp"/>

        <TextView
            android:id="@+id/tv_save"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:background="@drawable/submit_button"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginHorizontal="42dp"
            android:layout_marginVertical="30dp"
            android:text="保存二维码"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/save_img"
        android:text="传承道家智慧    尊享五福人生"
        android:textColor="#ffffffff"
        android:textSize="18sp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <ImageView
            android:id="@+id/tv_back"
            android:layout_width="10dp"
            android:layout_height="18dp"
            android:layout_marginLeft="18dp"
            android:src="@mipmap/write_back"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_regiest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请好友"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
           />

    </RelativeLayout>




</RelativeLayout>