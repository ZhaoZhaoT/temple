<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <RelativeLayout
            android:id="@+id/iv_left"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="9dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back_arrow" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_base_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="在线连接"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_online_connection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:bl_corners_radius="12dp"
        app:bl_solid_color="#F5E0CB">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/shengwei_bg" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="线上道观神位"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="进入"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            app:bl_corners_radius="17dp"
            app:bl_solid_color="#6D1B13" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_online_mudi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:bl_corners_radius="12dp"
        app:bl_solid_color="#CEDCDD">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/mudi_bg" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="线上墓地"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="进入"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            app:bl_corners_radius="17dp"
            app:bl_solid_color="#09676B" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:bl_corners_radius="12dp"
        app:bl_solid_color="#CEDCDD">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@mipmap/mudi_bg" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="线上墓地"
            android:textColor="#ff333333"
            android:textSize="16sp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="34dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:text="暂未开放"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            app:bl_corners_radius="17dp"
            app:bl_solid_color="#999999" />
    </LinearLayout>

</LinearLayout>