<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:banner="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1EBD8"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/home_bg" />

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="消息"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_top"
        android:background="#FFFDF6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_kefu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/kefu_message" />

                <TextView
                    android:id="@+id/tv_kefu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/iv_kefu"
                    android:text="客服消息"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_kefu"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/iv_kefu"
                    android:text="暂无新的客服消息"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/iv_kefu"
                    android:layout_marginTop="20dp"
                    android:background="#E3E3E3" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_xitong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/iv_xitong"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/xitong_message" />

                <TextView
                    android:id="@+id/tv_xitong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/iv_xitong"
                    android:text="系统消息"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_xitong"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/iv_xitong"
                    android:text="暂无新的系统消息"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/iv_xitong"
                    android:layout_marginTop="20dp"
                    android:background="#E3E3E3" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_richeng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/iv_richeng"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/richeng_message" />

                <TextView
                    android:id="@+id/tv_richeng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/iv_richeng"
                    android:text="日程提醒"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_richeng"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/iv_richeng"
                    android:text="暂无日程提醒"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/iv_richeng"
                    android:layout_marginTop="20dp"
                    android:background="#E3E3E3" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_shengri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/iv_shengri"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/shengri_message" />

                <TextView
                    android:id="@+id/tv_shengri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/iv_shengri"
                    android:text="生日提醒"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_shengri"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/iv_shengri"
                    android:text="暂无生日提醒"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/iv_shengri"
                    android:layout_marginTop="20dp"
                    android:background="#E3E3E3" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_jiri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <ImageView
                    android:id="@+id/iv_jiri"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/jiri_message" />

                <TextView
                    android:id="@+id/tv_jiri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/iv_jiri"
                    android:text="忌日提醒"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_jiri"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/iv_jiri"
                    android:text="暂无忌日提醒"
                    android:textColor="#999999"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/iv_jiri"
                    android:layout_marginTop="20dp"
                    android:background="#E3E3E3" />
            </RelativeLayout>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
