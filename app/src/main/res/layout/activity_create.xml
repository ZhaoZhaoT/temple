<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="28dp"
        android:background="@color/white"></View>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_top"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="44dp">

        <RelativeLayout
            android:id="@+id/iv_left"
            android:layout_width="50dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerVertical="true"
                android:src="@mipmap/back_arrow"
                android:layout_width="9dp"
                android:layout_height="16dp"/>
        </RelativeLayout>

        <TextView
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:text="创建"
            android:textStyle="bold"
            android:textColor="#333333"
            android:id="@+id/tv_base_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:padding="15dp">
        <LinearLayout
            android:id="@+id/upload_pic"
            android:layout_width="70dp"
            android:layout_height="100dp"
            app:bl_corners_radius="5dp"
            app:bl_solid_color="#EEEEEE"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/camara"
                android:layout_marginTop="15dp"
                ></ImageView>

            <TextView
                android:textSize="10sp"
                android:text="点击上传\n逝者照片"
                android:textColor="#6D1B13"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            >
            <TextView
                android:textSize="14sp"
                android:text="平台公开"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
            <ImageView
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:src="@mipmap/open_unselect"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/upload_pic"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:textSize="14sp"
                android:text="逝者姓名"
                android:textColor="#333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入逝者姓名"
                android:textSize="14sp"
                android:background="@null"
                android:layout_marginLeft="15dp"
                ></EditText>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        >
        <RelativeLayout
            android:id="@+id/rl_wdxz"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出生日期"
                android:textSize="15sp"
                android:textColor="#333333"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                ></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1930年9月7日"
                    android:textSize="15sp"
                    android:textColor="#6D1B13"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    ></TextView>
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="12.5dp"
                    android:src="@mipmap/iv_right"
                    ></ImageView>
            </LinearLayout>


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#E3E3E3"
            android:layout_marginHorizontal="15dp"
            ></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="逝世时间"
                android:textSize="15sp"
                android:textColor="#333333"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                ></TextView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2021年5月22日"
                    android:textSize="15sp"
                    android:textColor="#6D1B13"
                    android:layout_marginLeft="12dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    ></TextView>
                <ImageView
                    android:layout_width="7dp"
                    android:layout_height="12.5dp"
                    android:src="@mipmap/iv_right"
                    ></ImageView>
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:paddingVertical="20dp"
        android:paddingHorizontal="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出生日期"
            android:textSize="15sp"
            android:textColor="#333333"
            android:layout_centerVertical="true"
            ></TextView>
        <EditText
            android:id="@+id/et_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_f6f7f8_shape"
            android:paddingHorizontal="12dp"
            android:paddingVertical="18dp"
            android:layout_marginTop="14dp"
            android:minHeight="120dp"
            android:gravity="left"
            android:layout_below="@+id/tv_desc"
            android:hint="请填写逝者简介"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="25dp"
        android:background="@mipmap/submit_bt"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="16sp"
            ></TextView>

    </LinearLayout>






</LinearLayout>